<p id="notice"><%= notice %></p>
<h1>New Message</h1>
<%= render 'form', message: @message %>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.text %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Forget', message, method: :delete, data: { confirm: 'Are you sure? D:' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
